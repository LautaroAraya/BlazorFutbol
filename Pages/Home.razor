@page "/"

<div class="container-fluid">
    <div class="background-image">
        <div class="text-overlay">
            <h1 class="display-3">¡Bienvenido a KENJHI FC!</h1>
            <p class="lead">El hogar de la pasión por el fútbol.</p>
        </div>
    </div>
</div>

<style>
    body, html {
        height: 100%; /* Asegura que el cuerpo y el html ocupen el 100% de la altura */
        margin: 0; /* Elimina el margen por defecto */
        overflow: hidden; /* Evita el scroll */
    }

    .background-image {
        background-image: url('fondoBlazor.jpg'); /* Cambia la URL a tu imagen local */
        background-size: cover; /* Asegura que la imagen cubra todo el contenedor */
        background-repeat: no-repeat; /* Evita que la imagen se repita */
        background-position: center; /* Centra la imagen */
        height: 100vh; /* Ajusta la altura al 100% de la ventana */
        width: 100%; /* Asegura que el contenedor ocupe el 100% del ancho */
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        color: white; /* Cambia el color del texto */
    }

    .text-overlay {
        text-align: center;
        backdrop-filter: blur(5px); /* Aplica un desenfoque al fondo del texto */
        padding: 20px; /* Espaciado alrededor del texto */
        background-color: rgba(0, 0, 0, 0.5); /* Fondo oscuro semi-transparente para mejorar la legibilidad */
    }

    h1 {
        font-size: 4rem; /* Tamaño del título */
        font-weight: bold; /* Negrita para el título */
    }

    p {
        font-size: 1.5rem; /* Tamaño del subtítulo */
    }
</style>
